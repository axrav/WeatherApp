<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/updated_city"
        android:textColorHighlight="@color/white"
        android:textColor="@color/white"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:fontFamily="@font/rene"
        android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:id="@+id/city"
        android:hint="Enter City/Country Name"
        android:textColor="@color/white"
        android:inputType="textCapWords"
        android:maxLength="20"
        android:textColorHint="#808080"
        android:padding="30dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:fontFamily="sans-serif"
        android:text="SearchðŸ”"
        android:id="@+id/button_id"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/black">

    </androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="70dp"
        android:id="@+id/temperature"
        android:fontFamily="@font/jetbrains"
        android:textSize="80sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textColorHighlight="#808080" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_marginStart="70dp"
        android:layout_marginTop="390dp"
        android:fontFamily="@font/jetbrains"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textAlignment="center"
        android:layout_marginEnd="70dp"
        android:textColorHighlight="@color/white"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/peak">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jetbrains"
            android:text="Feels Like"
            android:layout_marginEnd="250dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="300dp"
                android:id="@+id/feelslike"
                android:textColor="@color/white"
                android:fontFamily="@font/rene"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jetbrains"
                android:layout_marginStart="300dp"
                android:text="Humidity"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="280dp"
                android:id="@+id/humidity"
                android:textColor="@color/white"
                android:fontFamily="@font/rene"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jetbrains"
                android:text="UV Index"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="250dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:id="@+id/airquality"
                android:layout_marginEnd="330dp"
                android:textColor="@color/white"
                android:fontFamily="@font/rene"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jetbrains"
                android:text="WindSpeed"
                android:layout_marginTop="130dp"
                android:layout_marginStart="270dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:layout_marginStart="250dp"
                android:id="@+id/windspeed"
                android:textColor="@color/white"
                android:fontFamily="@font/rene"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textAlignment="center"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>